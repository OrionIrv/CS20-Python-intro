myTuple = ("Apple", "Banana", "Apple")
#Change isn't posssible(non-mutable), but duplcates are
#reassignment is possible

le = 10
wi = 15
he = 12

def shape_calc(le, wi, he):
    area = 2*(le*wi + le*he + wi*he)
    volume = (le*wi*he)
    shape_data = (area, volume)
    return shape_data

print(shape_calc(le, wi, he))

