import easygui as easy

#Create a nest dictionary or list of dictionaries

emp1 = {"name":"Slater", "job":"Teacher", "Location": "CCHS", "start_date": 2018}
msg = "Would you like to add an employee to the register?"
title = "Add Employees"
all_employees = [emp1,]

running = True
def end():
    running = False

def add_person():
    if easy.enterbox(msg, title).upper() == "YES":
        name = easy.enterbox("What is the employees name?", "Name")
        job = easy.enterbox("What is the employees job?", "Job")
        location = easy.enterbox(F"Where does {name} work?", "Location")
        start = easy.enterbox(F"When did {name} start at this job?", "Start Date")
        emp2 = {"name":name, "job":job, "Location": location, "start_date": start}
    elif easy.enterbox(msg, title).upper() == "NO":
        end()
    
