import turtle as trt

window = trt.Screen()
window.bgcolor("grey")

was = trt.Turtle()
global x
def ring_count():
    rings = int(input("how manx rings is the target?"))
    rings = rings-1
    x = 50
    print(x, rings)
    for x in range(rings):
        x = x+20
        rings = rings-1
        print(x, rings)


this = "white"        
while x>50:
    x = x-20
    was.dot(x, this)
        
        
ring_count()
that = "black"
was.dot(x, that)







